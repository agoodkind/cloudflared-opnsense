<form>
    <field>
        <id>tunnel.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>Enable this ingress rule</help>
    </field>
    <field>
        <id>tunnel.hostname</id>
        <label>Hostname</label>
        <type>text</type>
        <help>Public hostname (e.g., app.example.com)</help>
    </field>
    <field>
        <id>tunnel.service</id>
        <label>Service Type</label>
        <type>dropdown</type>
        <help>Protocol for the origin service</help>
    </field>
    <field>
        <id>tunnel.url</id>
        <label>Origin URL</label>
        <type>text</type>
        <help>Local service URL (e.g., http://localhost:8080 or tcp://localhost:22)</help>
    </field>
</form>